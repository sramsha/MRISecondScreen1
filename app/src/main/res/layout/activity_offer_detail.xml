<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_offer_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.fyp.mrisecondscreen.activity.OfferDetail">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_frame">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="10dp"
            app:srcCompat="@drawable/com_facebook_tooltip_black_background"
            android:id="@+id/detail_image"

            android:layout_gravity="center"/>

    </FrameLayout>

    <TextView
        android:text="Cocacola Rs 1000 Credit Offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_title"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:layout_below="@id/detail_frame"
        android:background="@color/colorAccent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:textAllCaps="true"
        android:text="Congratulations! you have won Rs 1000 Credit from CocaCola company"
        android:textColor="#6e6e6e"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:lineSpacingExtra="3dp"
        android:textSize="22sp"
        android:gravity="center"

        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_below="@id/detail_title"
        android:id="@+id/detail_offer_detail"/>


</RelativeLayout>
