<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/border">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="CocaCola"
        android:textColor="#FFF"
        android:textSize="32sp"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/banner_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:textAllCaps="true"
        android:text="Congratulations! you have won Rs 1000 Credit from CocaCola company"
        android:textColor="#6e6e6e"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:lineSpacingExtra="3dp"
        android:textSize="22sp"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_below="@id/banner_title"
        android:id="@+id/banner_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/banner_text">

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Redeem Now"
            android:background="#333"
            android:textColor="#FFF"
            android:id="@+id/banner_redeem"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="20dp"
            android:text="Share on Facebook"
            android:textColor="#fff"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/banner_fb_share"
            android:textSize="13dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="20dp"
            android:text="Redeem Later"
            android:background="#333"
            android:textColor="#fff"
            android:id="@+id/banner_cancel"/>

    </LinearLayout>




</RelativeLayout>